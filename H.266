    def on_video_codec_change(self, event):
        """Обработчик изменения выбора видео кодека"""
        selected_display_name = self.video_codec_combobox.get()
        # Найдем техническое имя по пользовательскому
        for tech_name, disp_name in self.codec_display_names.items():
            if disp_name == selected_display_name:
                self.video_codec.set(tech_name)
                return
        # Если не нашли, возможно, пользователь ввел что-то вручную (маловероятно при readonly)
        # В этом случае просто установим как есть
        self.video_codec.set(selected_display_name)

