class FFmpegConverter:
    def __init__(self, root):
        self.root = root
        self.root.title("FFmpeg Converter")
        self.root.geometry("900x900") # Увеличил размер окна
        self.root.minsize(800, 700) # Минимальный размер
        self.root.resizable(True, True)
        
        # Путь к FFmpeg
        self.ffmpeg_path = r"C:\Program Files\ffmpeg\bin\ffmpeg.exe"
        # Проверим, существует ли по указанному пути, иначе попробуем найти в PATH
        if not os.path.exists(self.ffmpeg_path):
            self.ffmpeg_path = "ffmpeg" # Будем искать в PATH
            
        # Процесс конвертации
        self.current_process = None
        self.start_time = None
        
        # Словарь для отображения пользовательских названий кодеков
        self.codec_display_names = {
            "libvvenc": "H.266 (libvvenc)",
            "libx265": "H.265 (libx265)",
            "libx264": "H.264 (libx264)",
            "librav1e": "AV1 (librav1e)",
            "libvpx-vp9": "VP9 (libvpx-vp9)",
            "libaom-av1": "AV1 (libaom-av1)", # На случай, если будет добавлен
            # Аудио кодеки
            "libopus": "Opus (libopus)",
            "aac": "AAC",
            "libvorbis": "Vorbis (libvorbis)",
            "mp3": "MP3",
            "ac3": "AC3"
            # Можно добавить больше по необходимости
        }
        
        # Информация о FFmpeg и кодеках
        self.ffmpeg_version_info = ""
        self.ffmpeg_build_config = ""
        self.supported_encoders = []

        # Стили
        self.setup_styles()
        
        # Переменные
        self.input_file = tk.StringVar()
        self.output_file = tk.StringVar()
        self.video_codec = tk.StringVar(value="libvvenc") # Используем техническое имя
        self.video_preset = tk.StringVar(value="medium")
        self.video_bitrate = tk.StringVar(value="384k")
